@using Clinic.Models;
@{
  Layout = "_Layout";
}

<h2>Add new patient to @Model.GetName()</h2>

<form action='/doctors/@Model.GetId()' method="post">
  <div class = "form-group row">
      <div class="col col-md-3">
        <label for="patientName">Name: </label>
        <input class="form-control" id="patientName" name="patientName" type="text" required>
      </div>
      <div class="col col-md-3">
        <label for="birthday">Birthday: </label>
        <input class="form-control" id="birthday" name="birthday" type="date" required>
      </div>
  </div>
  <div class = "form-group row">
    <button class="btn btn-primary btn-lg" type="submit">Submit</button>
  </div>
</form>
<a href="/patients">Back</a>